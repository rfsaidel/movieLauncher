<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:background="@color/colorPanel"
        android:textColor="@color/colorWhite"
        android:text="Movie"
        android:textSize="40sp"
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/movie_cover"
            android:layout_width="170dp"
            android:layout_height="250dp"
            android:layout_margin="20dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/movie_cover"
            android:text="2017"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/movie_vote_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_release_date"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/movie_cover"
            android:text="9.9/10"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_cover"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/movie_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/movie_vote_average1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/movie_overview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/movie_release_date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/movie_poster_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>